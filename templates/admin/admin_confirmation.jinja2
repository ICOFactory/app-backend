{% extends "admin/admin_base.jinja2" %}

{% block header %}
<h1>{% block title %}{{ title }}{% endblock %}</h1>
{% endblock %}

{% block content %}
    <div id="confirmation_form_container">
        <form action="/admin/confirm" method="post">
            <input type="hidden" name="session_token" value="{{ session_token }}" />
            <input type="hidden" name="confirmation_value" value="{{ confirmation_value }}" />
            <input type="hidden" name="confirmation_type" value="{{ confirmation_type }}" />
            <table>
                <tr>
                    <td colspan="2"><h3>{{ confirmation_title }}</h3></td>
                </tr>
                <tr>
                    <td colspan="2"><p>{{ confirmation_message }}</p></td>
                </tr>
                {% if email_address %}
                <tr>
                    <td><label>E-mail Address</label></td>
                    <td><input type="email" name="email_address" class="login_input" /></td>
                </tr>
                {% endif %}
                {% if current_password %}
                <tr>
                    <td><label>Current Password</label></td>
                    <td><input type="password" name="current_password" class="login_input" /></td>
                </tr>
                {% endif %}
                {% if issue_credits %}
                    <tr>
                        <td><label>Issue Credits</label></td>
                        <td><input type="number" name="credits" value="0" class="login_input" /></td>
                    </tr>
                {% endif %}
                {% if new_password %}
                    <tr>
                    <td><label>New Password</label></td>
                    <td><input type="password" name="password" class="login_input" /></td>
                </tr>
                    <tr>
                    <td><label>Repeat New Password</label></td>
                    <td><input type="password" name="repeat_password" class="login_input" /></td>
                </tr>
                {% endif %}
                <tr><td colspan="2" align="right">
                    {% for each in choices %}
                        <input type="submit" class="grey_submit_button" name="choice" value="{{ each }}" />&nbsp;
                    {% endfor %}
                    <input type="submit" name="choice" value="{{ default_choice }}" class="blue_submit_button"/>
                </td></tr>
            </table>
        </form>
    </div>
{% endblock %}
